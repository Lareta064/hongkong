mixin spikerCard(imgSrc, title, linkText, text, modalId, linkAddr, linkIn, textModal)
	.spikers-card
		.card-content
			.card-img
				img(class="lazy" data-src="img/"+ imgSrc +".jpg", alt="spiker")
				
			.card-text
				h4 #{title}
					a(href= linkIn target="_blank").social-link in
				a(href= linkAddr target="_blank") !{linkText}
				.desk
					p !{text}
				.card-button
					button.blue-btn(data-toggle="modal" data-target= "#"+ modalId) Подробнее
		
			.modal.fade(id= modalId tabindex="-1" role="dialog"  aria-hidden="true")
				.modal-dialog.modal-dialog-centered(role="document")
					.modal-content
						button.close(type="button" data-dismiss="modal" aria-label="Close")
							span(aria-hidden="true") ×
						.spikers-card-modal
							a(href= linkIn  target="_blank").social-link in
							.card-img(class="lazy" data-src="img/"+ imgSrc +".jpg")
							.card-text
								p !{linkText}
								h4 #{title}
								.desk
									p !{textModal}


